{
  "name": "simaka-fullstack",
  "version": "1.0.0",
  "scripts": {
    "install-all": "npm run install:fe && npm run install:be",
    "install:fe": "cd frontend/NOAH && npm install",
    "install:be": "cd backend/backend_simaka && pip install -r requirements.txt",
    "frontend": "cd frontend/NOAH && npm run dev",
    "backend": "cd backend/backend_simaka && python simaka_backend/manage.py runserver",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\" --names \"DJANGO,NEXTJS\" --prefix-colors \"blue,magenta\""
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}